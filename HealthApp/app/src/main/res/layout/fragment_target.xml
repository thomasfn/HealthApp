<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:theme="@android:style/Theme.Light">

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Enter your target below."

        android:textSize="20dp" />

    <android.widget.Space
        android:layout_width="fill_parent"
        android:layout_height="10dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="1">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="Weight:"
            android:id="@+id/WeightTextView"
            android:layout_weight="0.15"
            android:gravity="center_vertical" />

        <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/WeightEditText"
            android:layout_weight="0.45"
            android:gravity="center_horizontal"
            android:numeric="integer" />

        <Spinner
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:id="@+id/WeightUnitSpinner"
            android:layout_weight="0.4"
            >

        </Spinner>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Weeks: "
            android:id="@+id/WeeksTextView"
            android:gravity="center_vertical" />

        <NumberPicker
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/WeeksNumberPicker"
            android:orientation="horizontal"
            />

    </LinearLayout>

    <android.widget.Space
        android:layout_width="fill_parent"
        android:layout_height="10dp" />


    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Based on your exercise and meals, you will gain/lose x calories per day."
        android:textSize="20dp"
        android:id="@+id/GainLoseTextView"
        android:gravity="center_vertical" />

    <android.widget.Space
        android:layout_width="fill_parent"
        android:layout_height="10dp" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="This means, at your current rate, it will take x days to reach your target."
        android:textSize="20dp"
        android:id="@+id/TargetTextView"
        android:gravity="center_vertical" />

    <android.widget.Space
        android:layout_width="fill_parent"
        android:layout_height="10dp" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="You should consume x less calories and burn off x more calories per day!"
        android:textSize="20dp"
        android:id="@+id/AdviceTextView"
        android:gravity="center_vertical" />

</LinearLayout>